# Autogenerated KV key options
# scripts/west_commands/cloudgen.py
{% for info in definitions.values() %}

config KV_STORE_KEY_{{ info['name'] }}
	bool "Enable KV key {{ info['name'] }}"
	{% if 'depends_on' in info %}
	depends on {{ info['depends_on'] }}
	{% endif %}
	{% if 'default' in info %}
	default {{ info['default'] }}
	{% endif %}
	help
	  {{ info['description'] }}
{% if 'range' in info %}

config KV_STORE_KEY_{{ info['name'] }}_RANGE
	int "Number of {{ info['name'] }} slots to enable"
	depends on KV_STORE_KEY_{{ info['name'] }}
	range 1 {{ info['range'] }}
	default {{ info.get('range_default', 1) }}
{% endif %}
{% endfor %}
