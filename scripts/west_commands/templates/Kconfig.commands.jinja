# Autogenerated RPC command options
# scripts/west_commands/cloudgen.py
{% for id, info in commands.items() %}

config INFUSE_RPC_COMMAND_{{ info['name'] | upper }}
	bool "Enable RPC {{ info['name'] }}"
	{% if 'depends_on' in info %}
	depends on {{ info['depends_on'] }}
	{% endif %}
	{% if 'default' in info %}
	default {{ info['default'] }}
	{% endif %}
	help
	  {{ info['description'] }}

config INFUSE_RPC_COMMAND_{{ info['name'] | upper }}_REQUIRED_AUTH
	int "Required authorisation level to run {{ info['name'] }}"
	depends on INFUSE_RPC_COMMAND_{{ info['name'] | upper }}
	default {% if info['default_auth'] == 'EPACKET_AUTH_DEVICE' %}2{% else %}1{% endif %}

{% endfor %}
