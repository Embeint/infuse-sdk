# Disable low power QSPI, gives a few Mbps extra throughput
configdefault NRF70_QSPI_LOW_POWER
	default n

# Ensure we can test 1024 byte packets with nRF70
configdefault NRF_WIFI_IFACE_MTU
	default 1280
configdefault NRF70_TX_MAX_DATA_SIZE
	default 1348
configdefault NRF70_RX_MAX_DATA_SIZE
	default 1348
configdefault HEAP_MEM_POOL_ADD_SIZE_NRF70
	def_int 60000

source "Kconfig.zephyr"
