#include <mem.h>

/delete-node/ &storage_partition;

/ {
	chosen {
		infuse,kv-partition = &storage_partition;
	};
};

&flashcontroller0 {
	reg = <0x00000000 DT_SIZE_K(2048 + 64)>;
};

&flash0 {
	reg = <0x00000000 DT_SIZE_K(2048 + 64)>;
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		/* Move storage partition to start so disk can take remaining space */
		storage_partition: partition@0 {
			label = "storage";
			reg = < 0x0 0x4000 >;
		};

		storage: partition@4000 {
			reg = <0x00004000 DT_SIZE_K(2048 + 64 - 16)>;
		};
	};
};

/ {
	storage_disk: storage_disk {
		compatible = "zephyr,flash-disk";
		partition = <&storage>;
		disk-name = "NAND";
		cache-size = <4096>;
	};

	data_logger_disk_access: data_logger_disk_access {
		compatible = "embeint,data-logger-disk-access", "embeint,data-logger";
		disk = <&storage_disk>;
	};
};
