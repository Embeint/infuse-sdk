# Infuse-IoT validation subsystem

config INFUSE_VALIDATION
	bool "Infuse-IoT hardware and driver validation libraries"

if INFUSE_VALIDATION

config INFUSE_VALIDATION_BUTTON
	bool "Infuse-IoT Button/GPIO validation"
	default y
	depends on DT_HAS_GPIO_KEYS_ENABLED

if INFUSE_VALIDATION_BUTTON

config INFUSE_VALIDATION_BUTTON_REQUIRE_MANUAL
	bool "Require manual hardware validation for the button"
	default n

config INFUSE_VALIDATION_BUTTON_ACTION_TIMEOUT
	int "Infuse-IoT Button timeout for action to occur (in seconds)"
	default 10

endif # INFUSE_VALIDATION_BUTTON

config INFUSE_VALIDATION_LEDS_GPIO
	bool "Infuse-IoT LEDs/GPIO validation"
	default y
	depends on DT_HAS_GPIO_LEDS_ENABLED

config INFUSE_VALIDATION_LEDS_CONTROLLER
	bool "Infuse-IoT LED validation through LED API"

if INFUSE_VALIDATION_LEDS_GPIO || INFUSE_VALIDATION_LEDS_CONTROLLER

config INFUSE_VALIDATION_LEDS_ACTION_DURATION
	int "Infuse-IoT LEDs/gpio on duration (in milliseconds)"
	default 500

endif # INFUSE_VALIDATION_LEDS_GPIO || INFUSE_VALIDATION_LEDS_CONTROLLER

if DISK_ACCESS

config INFUSE_VALIDATION_DISK_THROUGHPUT_BUFFER_SIZE
	int "Size in bytes of the throughput buffer"
	default 32768
	help
	  Increasing the size of this buffer should increase throughput
	  due to reducing transaction setup overhead.

endif # DISK_ACCESS

if NRF_MODEM_LIB

config INFUSE_VALIDATE_NRF_MODEM_GCI_SEARCH_TIMEOUT
	int "Maximum duration to scan for GCI cells (seconds)"
	default 10

config INFUSE_VALIDATE_NRF_MODEM_GCI_MIN_CELL
	int "Number of GCI cells expected to be scanned"
	default 0

endif # NRF_MODEM_LIB

if WIFI

# Required for `inet_ntop`
configdefault POSIX_NETWORKING
	default y

config INFUSE_VALIDATE_WIFI_SSID
	string "Network SSID to connect to"
	default "example"

config INFUSE_VALIDATE_WIFI_PSK
	string "Network pre-shared-key to connect with"
	default "password"

config INFUSE_VALIDATION_SNTP_SERVER
	string "SNTP server address"
	default "pool.ntp.org"

endif # WIFI

config HEAP_MEM_POOL_ADD_SIZE_LTE_CELL_SCAN
	int "Extra stack size for LTE network scanning"
	depends on LTE_LINK_CONTROL
	default 1024

endif # INFUSE_VALIDATION
